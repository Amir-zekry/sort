generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model shippingInformation {
  id          String   @id @default(uuid())
  name        String
  number      String   
  address     String
  createdAt   DateTime @default(now())
  governorate String
  orders      order[]
  userId      String?
  user        user?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model feature {
  id        String  @id @default(uuid())
  h1        String
  p         String
  itemId    String?
  image_url String
  item      item?   @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model imageGallery {
  id        String  @id @default(uuid())
  image_url String
  itemId    String?
  item      item?   @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model item {
  id             String         @id @default(uuid())
  sku            String?        @unique
  name           String
  price          Float
  createdAt      DateTime       @default(now())
  profit         Float
  image          String
  heroImage      String
  heroImagePhone String?
  discription    String
  note           String?
  catergory      String?
  feature        feature[]
  imageGallery   imageGallery[]
  cartItems      cartItem[]
  orderItems     orderItem[]
}

model order {
  id         String               @id @default(uuid())
  status     String               @default("pending")
  total      Float
  notes      String?
  createdAt  DateTime             @default(now())
  shippingInfoId String?
  shippingInformation   shippingInformation? @relation(fields: [shippingInfoId], references: [id], onDelete: SetNull)
  userId     String?
  user       user?                @relation(fields: [userId], references: [id], onDelete: SetNull)
  items      orderItem[]
}

model orderItem {
  id       String @id @default(uuid())
  orderId  String
  itemId   String
  quantity Int
  order    order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  item     item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model cartItem {
  id       String @id @default(uuid())
  cartId   String
  itemId   String
  quantity Int    @default(1)
  cart     cart?  @relation(fields: [cartId], references: [id], onDelete: Cascade)
  item     item?  @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model cart {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  userId    String     @unique
  user      user       @relation(fields: [userId], references: [id], onDelete: Cascade)
  cartItems cartItem[]
}

model user {
  id                   String                @id @default(uuid())
  name                 String
  phoneNumber          String                @unique
  password             String
  createdAt            DateTime              @default(now())
  orders               order[]
  cart                 cart?
  shippingInformations shippingInformation[]
}
