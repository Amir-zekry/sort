generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customer {
  id          String   @id @default(uuid())
  name        String
  number      String   @unique
  address     String
  createdAt   DateTime @default(now())
  governorate String
  orders      order[]
}

model feature {
  id        String  @id @default(uuid())
  h1        String
  p         String
  itemId    Int?
  image_url String
  item      item?   @relation(fields: [itemId], references: [id])
}

model imageGallery {
  id        String  @id @default(uuid())
  image_url String
  itemId    Int?
  item      item?   @relation(fields: [itemId], references: [id])
}

model item {
  id             Int   @id @default(autoincrement())
  name           String
  price          Float
  createdAt      DateTime @default(now())
  profit         Float
  image          String
  heroImage      String
  heroImagePhone String?
  discription  String
  note         String?
  feature      feature[]
  imageGallery imageGallery[]
  orders       order[]
}

model order {
  id         String    @id @default(uuid())
  status     String    @default("pending")
  total      Float
  createdAt  DateTime  @default(now())
  customerId String?
  itemId     Int?
  notes      String?
  quantity   Int       @default(1)
  customer   customer? @relation(fields: [customerId], references: [id])
  item       item?     @relation(fields: [itemId], references: [id])
}
