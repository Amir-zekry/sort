generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customer {
  id          String   @id @default(uuid())
  name        String
  number      String
  address     String
  createdAt   DateTime @default(now())
  governorate String
  orderId     String?
  order       order?   @relation(fields: [orderId], references: [id])
}

model feature {
  id        String  @id @default(uuid())
  h1        String
  p         String
  itemId    String?
  image_url String
  item      item?   @relation(fields: [itemId], references: [id])
}

model imageGallery {
  id        String  @id @default(uuid())
  image_url String
  itemId    String?
  item      item?   @relation(fields: [itemId], references: [id])
}

model item {
  id           String         @id @default(uuid())
  name         String
  price        Float
  createdAt    DateTime       @default(now())
  profit       Float
  Image        String
  discription  String
  orderId      String?
  feature      feature[]
  imageGallery imageGallery[]
  order        order?         @relation(fields: [orderId], references: [id])
}

model order {
  id        String     @id @default(uuid())
  status    String     @default("pending")
  total     Float
  createdAt DateTime   @default(now())
  customer  customer[]
  item      item[]
}
