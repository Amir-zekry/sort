generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customer {
  id          String   @id @default(uuid())
  name        String
  number      String
  address     String
  createdAt   DateTime @default(now())
  governorate String
  orders      order[]
}

model feature {
  id        String  @id @default(uuid())
  h1        String
  p         String
  itemId    String?
  image_url String
  item      item?   @relation(fields: [itemId], references: [id])
}

model imageGallery {
  id        String  @id @default(uuid())
  image_url String
  itemId    String?
  item      item?   @relation(fields: [itemId], references: [id])
}

model item {
  id             String         @id @default(uuid())
  sku            String?        @unique
  name           String
  price          Float
  createdAt      DateTime       @default(now())
  profit         Float
  image          String
  heroImage      String
  heroImagePhone String?
  discription    String
  note           String?
  feature        feature[]
  imageGallery   imageGallery[]
  orders         order[]
  // cartItems cartItem[]
}

model order {
  id            String    @id @default(uuid())
  status        String    @default("pending")
  total         Float
  createdAt     DateTime  @default(now())
  customerId    String?
  itemId        String?
  notes         String?
  paymentMethod String?   @default("cod")
  quantity      Int       @default(1)
  customer      customer? @relation(fields: [customerId], references: [id])
  item          item?     @relation(fields: [itemId], references: [id])
}

